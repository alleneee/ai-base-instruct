# 应用设置
APP_NAME=企业知识库平台
API_PREFIX=/api/v1
DEBUG=true
LOG_LEVEL=INFO

# 服务器设置
HOST=0.0.0.0
PORT=8000

# 数据库设置
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/enterprise_kb

# Milvus设置
MILVUS_HOST=localhost
MILVUS_PORT=19530
MILVUS_COLLECTION=enterprise_kb

# OpenAI设置
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_ORGANIZATION=your-openai-org-id

# Redis设置（用于缓存和速率限制）
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_URL=redis://localhost:6379/0

# 缓存配置
CACHE_EXPIRE=900  # 15分钟

# API限速配置
RATE_LIMIT_SECOND=10

# 邮件配置
MAIL_USERNAME=your-mail-username
MAIL_PASSWORD=your-mail-password
MAIL_FROM=noreply@example.com
MAIL_PORT=587
MAIL_SERVER=smtp.example.com
MAIL_FROM_NAME=企业知识库平台
MAIL_TLS=true
MAIL_SSL=false

# 安全设置
SECRET_KEY=your-secret-key-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=10080  # 7天 